<html xmlns="http://www.w3.org/1999/xhtml">
<head id="Head1">
    <title>@ViewBag.Title</title>
    <script src="~/Scripts/jquery-1.10.2.min.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery-ui.js"></script>
    <script type="text/javascript">
        window.history.forward();
        function noBack() { window.history.forward(); }
    </script>    
    <link href="~/Styles/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Styles/Default.css" rel="stylesheet" type="text/css" />
    <link href="~/Styles/jquery-ui.css" rel="stylesheet" />
    <style>
        .tabular {
            -webkit-border-radius: 10px;
            -moz-border-radius: 10px;
        }

        .ATMtabular {
            -webkit-border-radius: 10px;
            -moz-border-radius: 10px;
            background-image: url(~/images/ATM.jpg);
            height: 300;
        }

        .intabular {
            -webkit-border-radius: 10px;
            -moz-border-radius: 10px;
            background-color: White;
        }

        .sidebar {
            -webkit-border-radius: 10px;
            -moz-border-radius: 10px;
            background-color: White;
        }
    </style>
    @RenderSection("scripts", false)
</head>
<body style="background-image:url(/images/back.jpg);" onload="noBack();" onpageshow="if (event.persisted) noBack();" onunload="">
    <div>
        <center>
            <table class="tabular" width="80%">

                <tr>
                    <td colspan="2">
                        <img src="~/images/banner.jpg" width="100%" class="intabular" />
                    </td>
                </tr>

                <tr>
                    <td width="30%" align="center" class="sidebar"></td>
                    <td class="intabular">
                        <center>
                            @RenderBody()
                        </center>
                    </td>
                </tr>

                <tr>
                    <td colspan="2"></td>
                </tr>

                <tr>
                    <td colspan="2"></td>
                </tr>
                <tr>
                    <td colspan="2" style="background-color:#f5f5f5;text-align:center;">
                        Copyright @DateTime.Now.Year<br />
                        Note:This is a demo application only. You are requested to not store any sensitive information.
                    </td>
                </tr>
            </table>
        </center>
    </div>
    
    
</body>
</html>